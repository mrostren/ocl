<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.views">
      <view id="org.eclipse.emf.validation.debug.ui.validity"
            name="ValidityView"
            icon="icons/validation.gif"
            category="org.eclipse.ocl.examples.ui.views"
            class="org.eclipse.emf.validation.debug.ui.view.ValidityView"/>
   	</extension>
	<extension
		point="org.eclipse.ui.handlers">
	<!-- Validate OCL -->
		<handler
			class="org.eclipse.emf.validation.debug.ui.handler.OCLValidateHandler"
			commandId="org.eclipse.ocl.examples.xtext.completeocl.validate">
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="%MF_TriggerValidation"
			id="org.eclipse.ocl.examples.xtext.completeocl.validate"
			name="%MF_Validate">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.ocl.examples.ui.Menu?after=load">
			<command
         commandId="org.eclipse.ocl.examples.xtext.completeocl.validate"
         icon="icons/run_exc.gif"
         style="push"
         tooltip="%MF_TriggerOclValidation">
				<visibleWhen checkEnabled="false">
					<test property="org.eclipse.ocl.examples.ui.resourceSetAvailable" forcePluginActivation="true"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
       <extension
          point="org.eclipse.emf.validation.debug.validity_exporter">
       <exporter
             class="org.eclipse.emf.validation.debug.ui.export.util.HTMLExport"
             extension="html"
             name="HTMLExport">
       </exporter>
    </extension>
    <extension
          point="org.eclipse.emf.validation.debug.validity_exporter">
       <exporter
             class="org.eclipse.emf.validation.debug.ui.export.util.TextExport"
             extension="txt"
             name="TextExport">
       </exporter>
    </extension>
</plugin>
