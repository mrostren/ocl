<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.views">
      <category id="org.eclipse.emf.validation.ui"
      		name="Model Validation"/>
      <view id="org.eclipse.emf.validation.debug.ui.validity"
            name="ValidityView"
            icon="icons/validation.gif"
            category="org.eclipse.emf.validation.ui"
            class="org.eclipse.emf.validation.debug.ui.view.ValidityView"/>
   </extension>

       <extension
          point="org.eclipse.emf.validation.debug.validity_exporter">
       <exporter
             class="org.eclipse.emf.validation.debug.ui.export.util.HTMLExport"
             extension="html"
             name="HTMLExport">
       </exporter>
    </extension>
    <extension
          point="org.eclipse.emf.validation.debug.validity_exporter">
       <exporter
             class="org.eclipse.emf.validation.debug.ui.export.util.TextExport"
             extension="txt"
             name="TextExport">
       </exporter>
    </extension> 
</plugin>
